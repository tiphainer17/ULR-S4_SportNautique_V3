<!DOCTYPE html>
<html lang="fr">
<head>
    <title>{% block title %}{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/Style.css') }}">
    {% endblock %}
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
<div id="wrap">
<header>
    <nav>
        <ul class="navbar">
            <li><img src="{{ asset('img/logo.png') }}" alt="logo" class="logo"></li>
            <li><a href="{{ path('accueil') }}">Accueil</a></li>
            <li class="menu"><a href="{{ path('categorieAll') }}">Activit√© nautique</a>
                <ul class="deroulement">
                    <li><a href="{{ path('categorie1') }}">Subaquatique</a></li>
                    <li><a href="{{ path('categorie2') }}">Sports de glisse</a></li>
                    <li><a href="{{ path('categorie3') }}">Loisirs nautique</a></li>
                    <li><a href="{{ path('categorie4') }}">Navigation</a></li>
                </ul>
            </li>
            {% if app.user %}
                <li><a href="{{ path('compte') }}">Mon compte</a></li>
            {% else %}
            <li><a href="{{ path('login') }}">Connexion</a></li>
            {% endif %}
            <li><a href="{{ path('panier') }}">Panier</a></li>
        </ul>
    </nav>
</header>
{% block body %}{% endblock %}
<footer>
    <p>Projet - Framework Web</p>
    <p>Copyright 2021 Renouf Tiphaine</p>
    <div>
        <img class="reseaux" alt="facebook" src="{{ asset('img/iconfinder_online_social_media_facebook_734386.png') }}"/>
        <img class="reseaux" alt="twitter" src="{{ asset('img/iconfinder_twitter_online_social_media_734367.png') }}"/>
        <img class="reseaux" alt="youtube" src="{{ asset('img/iconfinder_youtube_online_social_media_tube_734362.png') }}"/>
        <img class="reseaux" alt="instagram" src="{{ asset('img/iconfinder_instagram_online_social_media_photo_734395.png') }}"/>
    </div>
</footer>
</div>
{% block javascripts %}
    <script type="text/javascript" src="{{ asset('js/slider.js') }}"></script>
{% endblock %}
</body>
</html>